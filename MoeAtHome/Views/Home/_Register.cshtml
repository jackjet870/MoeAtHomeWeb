<div class="main container" ng-controller="registerCtrl">
    <form class="ui warning form segment">
        @Html.AntiForgeryToken()
        <h3 class="header">注册</h3>
        <div class="ui red message" ng-show="errors.length != 0">
            <div class="header">好像发生了一些错误。</div>
            <ul class="list">
                <li ng-repeat="error in errors">{{error}}</li>
            </ul>
        </div>
        <div class="field" ng-class="{true: 'error'}[userName.hasError()]">
            <label for="UserName" class="control-label">用户名</label>
            <div class="ui left labeled icon input">
                <input type="text" ng-model="userName.value" placeholder="用户名" />
                <i class="user icon"></i>
                <div class="ui corner label">
                    <i class="icon asterisk"></i>
                </div>
                <span class="ui red pointing above ui label"
                      ng-show="userName.hasError()">{{userName.errorMessage}}</span>
            </div>
        </div>
        <div class="field" ng-class="{true: 'error'}[password.hasError()]">
            <label for="Password" class="control-label">密码</label>
            <div class="ui left labeled icon input">
                <input type="password" ng-model="password.value" placeholder="密码" />
                <i class="lock icon"></i>
                <div class="ui corner label">
                    <i class="icon asterisk"></i>
                </div>
                <span class="ui red pointing above ui label" 
                      ng-show="password.hasError()">{{password.errorMessage}}</span>
            </div>
        </div>
        <div class="field" ng-class="{true: 'error'}[confirmPassword.hasError()]">
            <label for="ConfirmPassword" class="control-label">确认密码</label>
            <div class="ui left labeled icon input">
                <input type="password" ng-model="confirmPassword.value" placeholder="确认密码" />
                <i class="lock icon"></i>
                <div class="ui corner label">
                    <i class="icon asterisk"></i>
                </div>
                <span class="ui red pointing above ui label"
                      ng-show="confirmPassword.hasError()">{{confirmPassword.errorMessage}}</span>
            </div>
        </div>
        <div class="field" ng-class="{true: 'error'}[email.hasError()]">
            <label for="Email" class="control-label">邮件地址</label>
            <div class="ui left labeled icon input">
                <input type="email" name="email" ng-model="email.value" placeholder="邮件地址" />
                <i class="mail icon"></i>
                <div class="ui corner label">
                    <i class="icon asterisk"></i>
                </div>
                <span class="ui red pointing above ui label"
                      ng-show="email.hasError()">{{email.errorMessage}}</span>
            </div>
        </div>
        <button type="submit" class="ui blue submit button" 
                ng-click="doRegister()">注册</button>

        <div class="ui blue message">
            已经有Moe@Home账户了？那么<a href="#/login">登录</a>吧
        </div>
    </form>
</div>