
<div class="main container" ng-controller="homePageCtrl">
    <section id="blogs" ng-repeat="blog in blogs">
        <div class="ui segment">
            <a class="teal header" href="#/blog/{{blog.date}}/{{blog.title}}">
                <h3 class="ui header">
                    <i class="circular inverted icon blue file"></i> {{blog.title}}
                </h3>
            </a>
            <div class="ui small labels" style="margin-top:.8em;">
                <a class="ui label" ng-repeat="tag in blog.tags"><i class="tag icon"></i>{{tag}}</a>
            </div>
            <p class="summary" ng-bind-html="renderHtml(blog.summary)"></p>
            <h5 class="inline gray"><i class="calendar icon"></i>{{parseDate(blog.dateTime)}}</h5>
            <h6 class="inline gray"><i class="comment icon"></i>0</h6>
        </div>
    </section>
</div>