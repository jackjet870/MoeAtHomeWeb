
<div class="main container" ng-controller="viewBlogCtrl" ng-init="onLoaded()">
    <section id="post" style="display:none;">
        <div class="ui segment">
            <h4 class="ui teal header">{{blog.title}}</h4>
            <div class="ui small labels">
                <a class="ui label" ng-repeat="tag in blog.tags"><i class="tag icon"></i>{{tag}}</a>
            </div>
            <h5 class="inline gray"><i class="calendar icon"></i>{{blog.date}}</h5>
            <h6 class="inline gray">
                <i class="comment icon"></i>{{blog.commentsCount}}
            </h6>
            <p class="blog-content"></p>
        </div>
    </section>
    <section id="post-notfound" style="display:none">
        <h4 class="ui red message">
            您要找的文章不存在。
        </h4>
    </section>
    <section id="comments" class="ui piled blue segment">
        <h4 class="ui dividing header">
            <i class="icon inverted circular blue comment"></i> 评论
        </h4>
        <div class="ui comments">
            <div class="comment">
                <a class="avatar">
                    <img src="~/images/title-background.jpg">
                </a>
                <div class="content">
                    <a class="author">xx</a>
                    <div class="metadata">
                        <span class="date">2天前</span>
                    </div>
                    <div class="text">
                        xxxx！
                    </div>
                    <div class="actions">
                        <a class="reply">回复</a>
                        <a class="delete">删除</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>